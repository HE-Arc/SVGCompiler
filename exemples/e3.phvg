        @[circle: radius=$i, positionX=$i*3, positionY=$i*3, color=red];

        if ($counter>4)
            @[rectangle: width=$i, positionX=$i*3,height=$i, positionY=$i*3, color=green];
        else
            @[triangle: width=$i, positionX=$i*3,height=$i, positionY=$i*3, color=blue];

        $i = $i *2;
